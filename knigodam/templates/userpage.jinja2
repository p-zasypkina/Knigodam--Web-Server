{% extends "base.jinja2" %}
{% block title %}KnigoDam{% endblock %}
{% block content %}
<div class="container">
  <h3>Информация о пользователе</h3>
  <p>Имя: {{ user.first_name }} {{ user.last_name }}</p>
  <p>
    Контактный номер телефона: {{ user.number_phone }}<br>
    Город: {{ user.city }}<br>
    E-mail: {{ user.email }} <br>
  </p>
  <table class="books">
    {% for ub in books %}
    <tr>
      <td>
        <img src="/static/{{ ub.book.img }}" alt="">
      </td>
      <td>
          <div class="describe">
              <h3><a href="/books/{{ ub.book_id }}">{{ ub.book.book_name }}</a></h3>
              <p>{{ ub.book.description }}</p>
              <p>Цена: {{ ub.price }} рублей</p>
          </div>
      </td>
    </tr>
    {% endfor %}
  </table>
  <div class="map">
    <script type="text/javascript" charset="utf-8" async src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3A39cb25c35c0c6b9ac59b90dc20f38d4052e782777342e97ad443c44293c0b136&amp;width=500&amp;height=400&amp;lang=ru_RU&amp;scroll=true"></script>
  </div>
</div>
{% endblock %}